  // ---------- Helpers ----------
  const fmtTHB = n => new Intl.NumberFormat('th-TH',{maximumFractionDigits:0}).format(n||0);
  function starIcons(n){
    const c = Math.max(0, Math.min(5, Math.round(n||0)));
    return `<span class="stars" aria-label="${c} ดาว">` +
      Array.from({length:c}).map(()=>`<span class="star" aria-hidden="true"><svg viewBox="0 0 24 24"><path d="M12 17.27 18.18 21l-1.64-7.03L22 9.24l-7.19-.61L12 2 9.19 8.63 2 9.24l5.46 4.73L5.82 21z"/></svg></span>`).join('') +
    `</span>`;
  }
  function badgeByScore(score){ if((score||0) >= 9) return {cls:'pill top', text:'Top Rated'}; return {cls:'pill best', text:'Best Value'}; }
  function partnerUrlFallback(){
    // ลิงก์ค้นหา Tokyo ทั่วไป (city=16572)
    const sp=new URLSearchParams({cid:'1949420', currency:'THB', utm_source:'clickandgo', utm_medium:'affiliate', noapp:'1', pcs:'1'});
    return `https://www.agoda.com/th-th/search?city=16572&${sp.toString()}`;
  }

  // ---------- Render ----------
  function render(){
    const grid = document.querySelector("#grid");
    grid.innerHTML = hotels.map(h=>{
      const starsDisplay = h.stars ? starIcons(h.stars) : '';
      const scoreTxt = h.rating_score ? `${h.rating_score}${h.rating_score>=9?' ยอดเยี่ยม':' ดีเยี่ยม'}` : '';
      const scoreDisplay = h.rating_score ? `<span class="score">รีวิว ${scoreTxt}${h.rating_count?` · ${new Intl.NumberFormat('th-TH').format(h.rating_count)} รีวิว`:''}</span>` : '';
      const {cls,text} = badgeByScore(h.rating_score||0);
      const btnUrl = h.agoda_link && h.agoda_link.startsWith('http') ? h.agoda_link : partnerUrlFallback();

      return `
      <article class="card">
        <a href="${btnUrl}" target="_blank" rel="nofollow noopener">
          <img src="${h.image_url}" alt="${h.name}">
        </a>
        <div class="card-body">
          <h3>${h.name}</h3>
          <div class="meta">
            ${starsDisplay}
            ${h.stars? '&nbsp;·&nbsp;' : ''}${scoreDisplay}
            <span class="${cls}">${text}</span>
          </div>
          <div class="features">
            <b>จุดเด่นโดนใจ</b>
            <ul>${(h.features||[]).map(x=>`<li>${x}</li>`).join('')}</ul>
          </div>
          <div class="row-price">
            <div class="price-wrap">
              <div class="price-note">ราคาอาจเปลี่ยนแปลงตามวันที่เข้าพัก</div>
              <div class="price">ราคาประมาณ ฿${fmtTHB(h.price_hint_thb)}</div>
            </div>
            <div class="h-actions">
              <a class="btn" href="${btnUrl}" target="_blank" rel="nofollow noopener">ดูข้อเสนอ</a>
            </div>
          </div>
        </div>
      </article>`;
    }).join('');

    const sp=new URLSearchParams({cid:'1949420',currency:'THB',utm_source:'clickandgo',utm_medium:'affiliate',noapp:'1',pcs:'1'});
    document.querySelector("#partnerMore").setAttribute('href', `https://www.agoda.com/th-th/search?city=16572&${sp.toString()}`);
  }

  render();
})();
</script>
</body>
</html>
